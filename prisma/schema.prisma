generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String  @id @default(uuid())
  username             String  @unique
  email                String  @unique
  gender               String
  date                 Int
  password             String
  iconNumber           Int
  displayMarkedMovies  Boolean @default(false)
  displayWatchedMovies Boolean @default(false)
}

model Movies {
  id          String   @id @default(uuid())
  title       String
  thumbnail   String
  trailer     String
  imdb        Float    @default(0.0)
  year        Int
  country     String[]
  genres      String[]
  actors      String[]
  description String
  director    String
  studio      String
  duration    Int      @default(0)
  rating      String   @default("NR")
  videos      Json[]
  releaseDate String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Series {
  id          String   @id @default(uuid())
  title       String
  trailer     String
  thumbnail   String
  imdb        Float    @default(0.0)
  year        Int
  country     String[]
  genres      String[]
  actors      Json[]
  duration    Int      @default(0)
  description String
  studio      String
  director    String
  rating      String   @default("NR")
  releaseDate String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  series      Json[]
}

model Actors {
  id    String   @id @default(cuid())
  name  String
  image String
  date  DateTime
}
